<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <theat>
    <tr>
      <th> Title </th>
      <th> Body </th>
      <th colspan="3"></th>
    </tr>
  </theat>

  <tbody>
    <tr>
      <td> <%= book.title %> </td>
      <td> <%= book.body %> </td>
      <td> <%= link_to "Show", book_path(book.id) %> </td>
    </tr>
  </tbody>
</table>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <label for="book_title"> Title </label>
  <%= f.text_field :title %>

  <label for="book_body"> Body </label>
  <%= f.text_area :body %>

  <%= f.submit'Create Book' %>

<% end %>
